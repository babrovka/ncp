<div class="proj-list">
	<ul id="project-list">
		<% @projects.each do |project| %>
		<li><%= link_to project_path(project) do %>
			<div class="<%= if project.id == @project.id then "btn get-content btn-primary" else "btn get-content" end %>" style="margin-bottom: 3px; width: 140px"><%= project.title %></div>
		<% end %></li>
		<% end %>
	</ul>
</div>


